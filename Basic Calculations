// Name: Barkha Kumari, Branch: A1
#include <iostream>
using namespace std;

int main() {
    float num1, num2;
    float sum, diff, product, quotient;

    cout << "Enter a Number: ";
    cin >> num1;

    cout << "Enter 2nd Number: ";
    cin >> num2;

    sum = num1 + num2;
    diff = num1 - num2;
    product = num1 * num2;
    quotient = num1 / num2;

    cout << "The Sum is: " << sum << endl;
    cout << "The Product is: " << product << endl;
    cout << "The Difference is: " << diff << endl;
    cout << "The Division is: " << quotient << endl;

    return 0;
}
/* OUTPUT
Enter a Number: 5
Enter 2nd Number: 2
The Sum is: 7
The Product is: 10
The Difference is: 3
The Division is: 2.5*/
